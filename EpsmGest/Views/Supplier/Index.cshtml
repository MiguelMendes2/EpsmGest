@model IEnumerable<EPSMGest.Models.SupplierModel>

@{
    ViewData["Title"] = "Index";
}

<div class="p-1 p-md-3 p-lg-4">
    <div class="card">
        <h5 class="card-header" style="background-color:rgb(35, 141, 15);color:white;">FORNECEDORES</h5>
        <div class="card-body">
            <table id="ContentTable" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>
                            Nome
                        </th>
                        <th>
                            Morada
                        </th>
                        <th>
                            NIF
                        </th>
                        <th>
                            <a asp-action="Create" class="btn btn-sm btn-primary"><i class="fas fa-plus"></i> Novo</a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @if (Model.Count() != 0)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NIF)
                                    </td>
                                    <td>
                                        <a asp-action="Detalhes" asp-route-id="@item.SupplierId" class="btn btn-primary"><i class="fas fa-clipboard-list"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="4" class="text-center">Vazio</td></tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<partial name="../Shared/_DataTable" />