@model IEnumerable<EPSMGest.Models.Stocks.StockCategoryModel>

@{
    ViewData["Title"] = "Gestão de Estoque";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Gestão de Estoque</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="index">Home</a></li>
                    <li class="breadcrumb-item active">Estoque</li>
                </ol>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <h5 class="card-header">Items</h5>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="ContentTable" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th class="w-25">
                                        Nome
                                    </th>
                                    <th class="w-25">
                                        Quantidade
                                    </th>
                                    <th class="w-25">
                                        Categoria
                                    </th>
                                    <th><a class="btn btn-sm btn-primary" asp-action="Create"><i class="fas fa-plus"></i> Novo</a></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    if (item.Stocks != null)
                                    {
                                        @foreach (var StockItem in item.Stocks)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => StockItem.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => StockItem.Quantity)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Name)
                                                </td>
                                                <td>
                                                    <a asp-action="Details" asp-route-id="@StockItem.Id" class="btn btn-sm btn-primary">
                                                        <i class="fas fa-edit"></i> Detalhes
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="../Shared/_DataTable" />
}