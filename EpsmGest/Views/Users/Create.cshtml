@model EpsmGest.ViewModel.RegisterViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="p-1 p-md-3 p-lg-4">
    <div class="card">
        <h5 class="card-header" style="background-color:rgb(35, 141, 15);color:white;">INSERIR UTILIZADOR</h5>
        <div class="card-body">
            <form asp-action="Create">
                <div class="container-md">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label asp-for="UserName" class="control-label">Nome</label>
                            <input asp-for="UserName" class="form-control" required="required" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label asp-for="Email" class="control-label">Email</label>
                            <input asp-for="Email" class="form-control" required="required" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label asp-for="Password" class="control-label">Password</label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="control-label">Confirme Password</label>
                            <input asp-for="ConfirmPassword" class="form-control" required="required" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label asp-for="Role" class="control-label">Cargo</label>
                            @Html.DropDownListFor(x => x.Role, new SelectList(ViewBag.Roles, "Name", "Name"), "-- Selecione Cargo --", new { @class="form-control", @required="required"})
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mt-2" style="text-align:right;">
                        <a asp-action="Index" class="btn btn-primary">Voltar</a>
                        <input type="submit" id="buttons" class="btn btn-success ml-2" value="Criar">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}

