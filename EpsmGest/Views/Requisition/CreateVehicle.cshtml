@model EpsmGest.ViewModel.Requisition.CreateReqVehicleViewModel

@{
    ViewData["Title"] = "Requesitar Veiculo";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Nova Requesição</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="index">Home</a></li>
                    <li class="breadcrumb-item active">Requesições</li>
                </ol>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <ul class="nav nav-tabs card-header-tabs">
                            <li class="nav-item">
                                <a class="nav-link" asp-action="CriarCompra"><i class="fas fa-shopping-cart"></i> Compra</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" href="#"><i class="fas fa-car"></i> Viatura</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="CriarEspaco"><i class="fas fa-school"></i> Espaço</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="CriarIntervencao"><i class="fas fa-wrench"></i> Intervenção</a>
                            </li>
                        </ul>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <form asp-action="CriarVeiculo">
                            <div class="container-md">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label asp-for="Requisition.DepartamentId" class="control-label">Departamento:</label><br />
                                        @Html.DropDownListFor(x => x.Requisition.DepartamentId, new SelectList(ViewBag.Departamentos, "Id", "Name"), "-- Selecione Departamento --", new { @class="form-control"})
                                        <span asp-validation-for="Requisition.DepartamentId" class="text-danger"></span>
                                    </div>
                                </div>
                                <input asp-for="Requisition.Applicant" value="@User.Identity.Name" hidden />
                                <div class="col-md-5 mt-2">
                                    <div class="form-group">
                                        <label class="control-label">Requerente:</label>
                                        <input type="text" value="@User.Identity.Name" class="form-control" id="RequerenteInput" readonly />
                                    </div>
                                </div>
                                <div class="col-md-5 mt-2">
                                    <div class="form-group">
                                        <label asp-for="Requisition.Description" class="control-label">Descrição:</label>
                                        <input asp-for="Requisition.Description" class="form-control" />
                                        <span asp-validation-for="Requisition.Description" class="text-danger"></span>
                                    </div>
                                </div>

                                <hr />
                                
                                <div class="col-12 col-md-5 mt-2">
                                    <div class="form-group">
                                        <label asp-for="ReqVehicle.Service" class="control-label">Serviço:</label>
                                        <input asp-for="ReqVehicle.Service" class="form-control" />
                                        <span asp-validation-for="ReqVehicle.Service" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12 col-md-5 mt-2">
                                        <div class="form-group">
                                            <label asp-for="ReqVehicle.Origin" class="control-label">Origem:</label>
                                            <select asp-for="ReqVehicle.Origin" class="form-control" required>
                                                <option selected>-- Selectione Origem --</option>
                                                <option value="EPSM">EPSM</option>
                                                <option value="EPC">EPC</option>
                                                <option value="EPVT">EPVT</option>
                                                <option value="EPHTL">EPHTL</option>
                                            </select>
                                            <span asp-validation-for="ReqVehicle.Origin" class="text-danger"></span>
                                        </div>
                                    </div>
                                                                        
                                    <div class="col-12 offset-md-1 col-md-5 mt-2">
                                        <div class="form-group">
                                            <label asp-for="ReqVehicle.Arrival" class="control-label">Partida:</label>
                                            <input asp-for="ReqVehicle.Arrival" type="datetime-local"class="form-control" />
                                            <span asp-validation-for="ReqVehicle.Arrival" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-12  col-md-5 mt-2">
                                        <div class="form-group">
                                            <label asp-for="ReqVehicle.Departure" class="control-label">Chegada:</label>
                                            <input asp-for="ReqVehicle.Departure" type="datetime-local" class="form-control" />
                                            <span asp-validation-for="ReqVehicle.Departure" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-12 offset-md-1 col-md-5 mt-2">
                                        <div class="form-group">
                                            <label asp-for="ReqVehicle.Occupants" class="control-label">Ocupantes:</label>
                                            <input asp-for="ReqVehicle.Occupants" class="form-control" value="1" />
                                            <span asp-validation-for="ReqVehicle.Occupants" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-12 col-md-5 mt-2">
                                        <div class="form-group">
                                            <label asp-for="ReqVehicle.Driver" class="control-label">Condutor:</label>
                                            <input asp-for="ReqVehicle.Driver" class="form-control" value="1" />
                                            <span asp-validation-for="ReqVehicle.Driver" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-12 offset-md-1 col-md-5 mt-2">
                                        <div class="form-group">
                                            <label asp-for="ReqVehicle.VehicleId" class="control-label">Veículos:</label>
                                            @Html.DropDownListFor(x => x.ReqVehicle.VehicleId, new SelectList(ViewBag.Vehicles, "Id", "Name"), "-- Selecione Viatura --", new { @class="form-control"})
                                            <span asp-validation-for="ReqVehicle.VehicleId" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-12 col-md-5 mt-2">
                                        <div class="form-group">
                                            <label asp-for="ReqVehicle.KmsOnDeparture" class="control-label">Kms à saida:</label>
                                            <input asp-for="ReqVehicle.KmsOnDeparture" class="form-control" />
                                            <span asp-validation-for="ReqVehicle.KmsOnDeparture" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-12 offset-md-1 col-md-5 mt-2">
                                        <div class="form-group">
                                            <label asp-for="ReqVehicle.KmsOnArrival" class="control-label">Kms à chegada:</label>
                                            <input asp-for="ReqVehicle.KmsOnArrival" class="form-control" />
                                            <span asp-validation-for="ReqVehicle.KmsOnArrival" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-12 col-md-5 mt-2">
                                        <div class="form-group">
                                            <label asp-for="ReqVehicle.Gas" class="control-label">Abastecimento:</label>
                                            <input asp-for="ReqVehicle.Gas" type="number" step="0.1" class="form-control" placeholder="10,5" />
                                            <span asp-validation-for="ReqVehicle.Gas" class="text-danger"></span>
                                        </div>
                                    </div>

                                </div>

                                <div class="mt-2" style="text-align:right;">
                                    <a asp-action="Index" class="btn btn-primary"><i class="fas fa-arrow-left"></i> Voltar</a>
                                    <button type="submit" id="buttons" class="btn btn-success ml-2"><i class="fas fa-plus"></i> Criar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}