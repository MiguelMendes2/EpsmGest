@model IEnumerable<EpsmGest.ViewModel.Requisition.RequisitionsViewModel>
@{
    ViewData["Title"] = "Index";
}
<div class="p-1 p-md-3 p-lg-4">
    <div class="card">
        <h5 class="card-header" style="background-color:rgb(35, 141, 15);color:white;">REQUISIÇÕES</h5>
        <div class="card-body">
            <table id="ContentTable" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                            Departamento
                        </th>
                        <th>
                            Requerente
                        </th>
                        <th>
                            Descrição
                        </th>
                        <th>
                            Data
                        </th>
                        <th><a asp-action="Criar" class="btn btn-sm btn-primary"><i class="fas fa-plus"></i> Nova</a></th>
                    </tr>
                </thead>
                <tbody>
                    @if(Model != null)
                    {
                        @if (Model.Count() != 0)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RequisicaoId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Department)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Applicant)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @item.Date.ToString("dd/MM/yyyy")
                                    </td>
                                    <td>
                                        <a asp-action="Detalhes" asp-route-id="@item.RequisicaoId" class="btn btn-primary"><i class="fas fa-clipboard-list"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="6" class="text-center">Vazio</td></tr>
                        }
                    }                    
                </tbody>
            </table>
        </div>
    </div>
</div>
<partial name="../Shared/_DataTable" />